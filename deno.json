{
  "nodeModulesDir": "auto",
  "tasks": {
    "dev": "deno run -A --watch=static/,routes/ main.ts",
    "check": "deno check **/*.ts **/*.tsx",
    "test": "deno test -A --parallel",
    "build": "deno run -A main.ts build",
    "preview": "deno run -A main.ts"
  },
  "imports": {
    "@fresh/core": "jsr:@fresh/core@^2.2.0",
    "@fresh/plugin-tailwind": "jsr:@fresh/plugin-tailwind@^1.0.0",
    "@std/assert": "jsr:@std/assert@^1.0.0",
    "@std/front-matter": "jsr:@std/front-matter@^1.0.0",
    "@deno/gfm": "jsr:@deno/gfm@^0.10.0",
    "@std/path": "jsr:@std/path@^1.0.0",
    "@std/fs": "jsr:@std/fs@^1.0.0",
    "preact": "npm:preact@10",
    "preact/hooks": "npm:preact@10/hooks",
    "preact/test-utils": "npm:preact@10/test-utils",
    "preact-render-to-string": "npm:preact-render-to-string@6",
    "tailwindcss": "npm:tailwindcss@^4.0.0",
    "happy-dom": "https://esm.sh/happy-dom@15.7.4"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  }
}
